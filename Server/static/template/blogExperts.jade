doctype html
html
  head
    meta(charset='utf-8')
    link(rel='shortcut icon', href='../icon/icons/favicon.ico')
    title MyBlog博客专家
    link(rel='stylesheet', type='text/css', href='../css/blogExperts_css.css')
    link(rel='stylesheet', type='text/css', href='../icon/icons/iconfont.css')
